---
import Icon from './Icon.astro';
import { getImage } from 'astro:assets';

// Hero section for PesoTracker landing page
const baseUrl = import.meta.env.BASE_URL;
---

<section class="relative min-h-screen flex items-center justify-center bg-gradient-to-br from-green-50 via-white to-emerald-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Left Column - Content -->
      <div class="text-center lg:text-left">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight mb-6">
          <span class="text-green-600">PesoTracker</span>
          <br>
          <span class="text-gray-700">Seguimiento de Peso Moderno para macOS</span>
        </h1>
        
        <p class="text-xl md:text-2xl text-gray-600 mb-8 leading-relaxed">
          La aplicaci칩n m치s completa para gestionar tu peso con tecnolog칤a de vanguardia
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start mb-8">
          <a 
            href="https://github.com/StevenACZ/peso-tracker/releases/tag/v1.0.0" 
            target="_blank" 
            rel="nofollow noopener noreferrer"
            class="inline-flex items-center px-8 py-4 text-lg font-semibold text-white bg-green-600 hover:bg-green-700 rounded-lg shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-200"
          >
            <Icon name="download" size="md" class="mr-3" />
            Descargar Gratis v1.0.0
          </a>
          
          <a 
            href="https://github.com/StevenACZ/peso-tracker" 
            target="_blank" 
            rel="nofollow noopener noreferrer"
            class="inline-flex items-center px-8 py-4 text-lg font-semibold text-green-700 bg-white hover:bg-green-50 rounded-lg border-2 border-green-200 hover:border-green-300 shadow-md hover:shadow-lg transform hover:scale-105 transition-all duration-200"
          >
            <Icon name="code" size="md" class="mr-3" />
            Ver C칩digo Fuente
          </a>
        </div>

        <!-- Key Features Preview -->
        <div class="flex flex-wrap gap-4 sm:gap-6 justify-center lg:justify-start text-sm text-gray-600">
          <div class="flex items-center">
            <div class="w-2 h-2 bg-green-500 rounded-full mr-2"></div>
            <span>Autenticaci칩n JWT</span>
          </div>
          <div class="flex items-center">
            <div class="w-2 h-2 bg-green-500 rounded-full mr-2"></div>
            <span>Gr치ficos Interactivos</span>
          </div>
          <div class="flex items-center">
            <div class="w-2 h-2 bg-green-500 rounded-full mr-2"></div>
            <span>Open Source</span>
          </div>
          <div class="flex items-center">
            <div class="w-2 h-2 bg-green-500 rounded-full mr-2"></div>
            <span>macOS Nativo</span>
          </div>
        </div>
      </div>

      <!-- Right Column - App Preview -->
      <div class="relative mt-8 lg:mt-0">
        <div class="relative bg-white rounded-2xl shadow-2xl p-6 sm:p-8 lg:p-12 border border-gray-200">
          <!-- Main dashboard screenshot with Ray.so style -->
          <div class="aspect-[5/4] rounded-2xl overflow-hidden shadow-2xl bg-gradient-to-br from-green-400 via-green-500 to-emerald-600 p-8 flex items-center justify-center">
            <img 
              src={`${baseUrl}screenshots/dashboard.webp`} 
              alt="Dashboard principal de PesoTracker mostrando gr치ficos de progreso y estad칤sticas de peso"
              class="max-w-full max-h-full object-contain rounded-xl shadow-2xl hover:scale-105 transition-transform duration-500"
              loading="eager"
              style="filter: drop-shadow(0 15px 35px rgba(0,0,0,0.4));"
            />
          </div>
          
          <!-- Floating decorative elements -->
          <div class="absolute -top-6 -left-6 w-16 h-16 rounded-xl bg-gradient-to-br from-green-400 to-green-600 shadow-lg border-2 border-white animate-pulse flex items-center justify-center">
            <span class="text-2xl outline-none select-none" role="img" aria-label="Balanza">丘뒲잺</span>
          </div>
          <div class="absolute -bottom-6 -right-6 w-20 h-20 rounded-xl bg-gradient-to-br from-green-500 to-emerald-600 shadow-lg border-2 border-white animate-pulse delay-150 flex items-center justify-center">
            <span class="text-3xl outline-none select-none" role="img" aria-label="Gr치fico">游늵</span>
          </div>
          <div class="absolute top-1/4 -left-4 w-12 h-12 rounded-full bg-gradient-to-br from-green-300 to-green-500 shadow-md border border-white animate-pulse delay-300 flex items-center justify-center">
            <span class="text-lg outline-none select-none" role="img" aria-label="Meta">游꿢</span>
          </div>
          <div class="absolute bottom-1/3 -right-3 w-14 h-14 rounded-full bg-gradient-to-br from-emerald-400 to-green-600 shadow-md border border-white animate-pulse delay-500 flex items-center justify-center">
            <span class="text-xl outline-none select-none" role="img" aria-label="Tendencia">游늳</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>