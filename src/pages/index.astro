---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Features from '../components/Features.astro';
import Screenshots from '../components/Screenshots.astro';
import SystemRequirements from '../components/SystemRequirements.astro';
import Installation from '../components/Installation.astro';
import Download from '../components/Download.astro';
import Footer from '../components/Footer.astro';

const title = "PesoTracker - Seguimiento de Peso Moderno para macOS";
const description = "La aplicación más completa para gestionar tu peso con tecnología de vanguardia. Desarrollada para macOS con SwiftUI, autenticación JWT, gráficos interactivos y exportación de datos.";
const keywords = "pesotracker, weight tracker, seguimiento peso, macos, swift, aplicacion peso, swiftui, salud, peso, fitness, bmi calculator";
---

<Layout title={title} description={description} keywords={keywords}>
  <!-- Hero Section -->
  <Hero />
  
  <!-- Features Section -->
  <Features />
  
  <!-- Screenshots Section -->
  <Screenshots />
  
  <!-- System Requirements -->
  <SystemRequirements />
  
  <!-- Installation Guide -->
  <Installation />
  
  <!-- Download Section -->
  <Download />
  
  <!-- Footer -->
  <Footer />
</Layout>
